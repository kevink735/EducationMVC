<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

  <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>   

</head>
<body style="background-color:lightslategray">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" style="color:yellow;font-weight:400;" href="#">Demo Company Portal</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Home", "Index", "Employeedemo")</li>
                @*<li><a href="#">Register</a></li>*@
                <li><a href="#">About</a></li>
                <li><a href="#">Contact</a></li>
                <li>@Html.ActionLink("Jobs", "Jobs", "Employeedemo")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div>
        @RenderBody()

        <footer>
            <center>  <p style="color:white">&copy; @DateTime.Now.Year -Demo Company Portal.</p></center>
        </footer>
    </div>

     @Scripts.Render("~/bundles/jquery") 
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
