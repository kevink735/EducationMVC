@model Education.Models.student
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Add Student";
}

<h2> Add Student</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        

        <div class="form-group">

            @Html.Label("Email", new { @class = "control-label col-lg-2" })
            <div class="col-md-20">
               @Html.TextBoxFor(model => model.email, new { @Value = @User.Identity.GetUserName(), @readonly = "true"  }) 
            </div>
        </div>

        <div class="form-group">

            @Html.Label("First Name", new { @class = "control-label col-lg-2" })
            <div class="col-md-20">

                @Html.TextBoxFor(model => model.firstname, new { @class = "form-control input-sm ", @maxlength = 10, placeholder = "First name" })
                @Html.ValidationMessageFor(model => model.firstname)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Last Name", new { @class = "control-label col-md-2" })
            <div class="col-md-20">

                @Html.TextBoxFor(model => model.lastname, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.lastname)
            </div>
        </div>

        <div class="form-group">

            @Html.Label("Gender", new { @class = "control-label col-md-2" })
            <div class="col-md-20">
                @Html.DropDownListFor(model => model.gender, new SelectList(
                  new List<Object>{
                       new { value = 0 , text = "--Select--"  },
                       new { value = "M" , text = "Male" },
                       new { value = "F", text = "Female"}
                    },
                  "value",
           "text", 0), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.gender)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Address", new { @class = "control-label col-md-2" })
            <div class="col-md-20">
                @Html.TextBoxFor(model => model.address, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.address)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Country", new { @class = "control-label col-md-2" })
            <div class="col-md-20">
                @Html.DropDownListFor(model => model.countryid, new System.Web.Mvc.SelectList(ViewBag.country, "countryid", "countryname"), "--Select--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.countryid)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-success btn-lg" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-20">
            @TempData["Message"]
        </div>
    </div>
}

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
